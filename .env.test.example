# Test environment variables for integration tests
# Copy to .env.test and adjust as needed

NODE_ENV=test

# PostgreSQL connection dedicated for tests
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=admin
DB_NAME=capstone_sales_test

# TypeORM behavior during tests
# Set to true to drop and recreate schema on each app bootstrap
TYPEORM_DROP_SCHEMA=false
TYPEORM_SYNC=true

# JWT secret used by AuthModule
JWT_SECRET=test-secret

